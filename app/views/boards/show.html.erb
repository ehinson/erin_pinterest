<div class="title">
  <h2><%= @board.name %></h2>
  <p> <%= @board.about %></p>
</div>

<div>
  <strong>User:</strong>
  <%= @board.user_id %>
<div>

<div class="columns">
<% @pins.each do |pin| %>
      <div class= "item-background">
        
        <div class = "pin-image">
        <%= image_tag(pin.image_url, :width => "100%") if pin.image.present? rescue "N/A" %>
        </div>

        <div class = "item-information">
        <h3><%= pin.name %></h3><!--setup pin.name associations-->
        <h4><%= pin.user_id %></h4>
        <!--board_id-->
        </div>

        <div class="item-links">
        <%= link_to 'Show', pin %>
        <%= link_to 'Edit', edit_pin_path(pin) %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>





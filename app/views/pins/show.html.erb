<p id="notice"><%= notice %></p>

<div class= "columns item-background one-third">

  <div class="pin-image">
  	<%= image_tag(@pin.image_url, :width => "100%") if @pin.image.present? %>
  </div>

  <div class= "item-information">
	  <strong>Name:</strong>
	  <%= @pin.name %>
	  <strong>User:</strong>
	  <%= @pin.user_id %>
    <strong>Board:</strong>
    <%= @pin.board_id %>
  </div>


	<div class="item-links">
        <%= link_to 'Edit', edit_pin_path(@pin) %>
        <%= link_to 'Destroy', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
</div>
